<body>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url(<%= image_path(@post.image_url.to_s) %>)">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                    <div class="post-heading">
                        <h1><%= @post.title %></h1>
                        <h2 class="subheading"><%= @post.subtitle %></h2>
                        <span class="meta">Posted by Cameron Leake on <%= @post.date %></span>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- Post Content -->
    <article>
        <div class="container">  
            <div class="row">
                <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
                    <p><%= raw(@post.preview) %></p>
                </div>
            </div>

            <div class="clearfix">
                <div class="btn-group btn-group float-right" role="group">
                    <button type="button" class="btn btn-secondary">
                        <%= link_to 'Edit', edit_post_path(@post) %>
                    </button>
                    <button type="button" class="btn btn-secondary">
                        <%= link_to 'Return to All Posts', root_path %>
                    </button>
                </div>
            </div>

            <hr>

            <% @post.comments.reverse.each do |comment| %>
                <%= render 'comments/comment', comment: comment %>
            <% end %>

            <%= render 'comments/form' %>

        </div>
    </article>

    <hr>

</body>

</html>
